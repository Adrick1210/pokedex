<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="add">
      <a href="/pokemon/new" class="add-link">Add</a>
    </div>
    <h1 class="header dex">Choose that Pok√©mon!</h1>

    <div class="poke-container">
      <ul class="poke-list">
        <%for (let i = 0; i < pokemon.length; i++) { %>
        <a href="/pokemon/<%= i %>"
          ><img
            src="<%= pokemon[i].img %>"
            alt="<%= pokemon[i].name %>"
            class="poke-img"
        /></a>
        <div class="buttons">
          <a href="/pokemon/<%= i %>/edit">
            <input type="submit" value="Edit" class="button">
          </a>
          <form action="/pokemon/<%= i %>/?_method=DELETE" method="post">
          <input type="submit" value="Delete" class="button">
          </form>
        </div>
        <% } %>
      </ul>
    </div>
  </body>
</html>
